<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý sản phẩm - TechMarket Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/admin.ejs') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-box me-2"></i>Quản lý sản phẩm</h2>
            <a href="/admin/products/create" class="btn btn-primary">Thêm sản phẩm</a>
        </div>

        <!-- Products Table -->
        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach((product, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= product.name %></td>
                                <td><%= product.price %> VNĐ</td>
                                <td><%= product.status %></td>
                                <td>
                                    <a href="/admin/products/<%= product._id %>/edit" class="btn btn-warning btn-sm">Sửa</a>
                                    <button class="btn btn-danger btn-sm" onclick="showDeleteModal('<%= product._id %>')">Xóa</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include('../partials/admin/pagination.ejs') %>
    </div>

    <%- include('../partials/admin/deleteModal.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>