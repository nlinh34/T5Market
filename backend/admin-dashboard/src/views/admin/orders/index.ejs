<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Đơn hàng - TechMarket Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/admin.ejs') %>

    <div class="container mt-4">
        <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Quản lý Đơn hàng</h2>

        <div class="card mb-4">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach((order, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= order.customerName %></td>
                                <td><%= order.totalAmount %> VNĐ</td>
                                <td><%= order.status %></td>
                                <td>
                                    <a href="/admin/orders/<%= order._id %>" class="btn btn-info btn-sm">Chi tiết</a>
                                    <a href="/admin/orders/edit/<%= order._id %>" class="btn btn-warning btn-sm">Sửa</a>
                                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="<%= order._id %>">Xóa</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include('../partials/admin/pagination.ejs') %>
    </div>

    <%- include('../partials/admin/deleteModal.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>